WIFI_DRIVER_FW_PATH_AP:=AP
WIFI_DRIVER_FW_PATH_P2P:=P2P

# GPS
TARGET_SPECIFIC_HEADER_PATH := device/no1/D6/include

LCM_HEIGHT=360
LCM_WIDTH=360

USE_LEGACY_MTK_AV_BLOB=true

# Use old sepolicy version
